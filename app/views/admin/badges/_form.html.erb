<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    Choose badge number:
    <%= form.select :file, options_for_select([
                                              [1, '1.png'],
                                              [2, '2.png'],
                                              [3, '3.png'],
                                              [4, '4.png'],
                                              [5, '5.png']
                                              ]) %>

  </p>

  <p>
    <%= form.label :name %>:
    <%= form.text_field :name, id: :badge_name %>
  </p>

  <p>
    <%= form.label :rule %>:
    <%= form.select :rule, options_for_select([
                                              ['level', 'level'],
                                              ['category', 'category'],
                                              ['attempt', 'attempt']
                                              ]) %>
  </p>

  <p>
    <%= form.label :rule_value %>:
    <%= form.text_field :rule_value, id: :badge_rule_value %>
  </p>



  <p><%= form.submit class: 'btn btn-primary' %></p>
<% end %>

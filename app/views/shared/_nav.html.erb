<p class="nav user"><%= link_to 'Test Guru', root_path %></p>

<% if user_signed_in? %>
  <p class="nav user">
    <%= t('.welcome') %>, <b><%= current_user.email %></b> <%= t('.guru') %>
  </p>

  <p class="nav user">
    <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
  </p>

<% else %>
  <p class="nav user">
    <%= link_to t('.login'), new_user_session_path %>
  </p>

  <p class="nav user">
    <%= link_to t('.register'), new_user_registration_path %>
  </p>
<% end %>

<p class="nav user"><%= link_to 'Test Guru', root_path %></p>

<% if user_signed_in? %>
  <p class="nav user">
    Welcome, <b><%= current_user.email %></b> Guru
  </p>

  <p class="nav user">
    <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
  </p>

<% else %>
  <p class="nav user">
    <%= link_to 'Login', new_user_session_path %>
  </p>

  <p class="nav user">
    <%= link_to 'Register', new_user_registration_path %>
  </p>
<% end %>

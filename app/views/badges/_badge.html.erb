<tr>
  <td class="align-middle"><%= image_tag(badge.file, size: "48") %></td>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.rule_value %></td>
  <% if current_user.admin? %>
    <td><%= link_to t('.show'), admin_badge_path(badge) %></td>
    <td><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
    <td><%= link_to t('.delete'),
                admin_badge_path(badge),
                method: :delete,
                data:   { confirm: t('.sure') } %>
    </td>
  <% end %>
</tr>
